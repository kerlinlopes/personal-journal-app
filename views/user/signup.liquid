{% layout "layout.liquid" %} {% block content %}

<style>
  div {
    display: flex;
    justify-content: center;
  }
  legend {
    color: hotpink;
    font-size: 40px;
    font-family: "Delius", cursive;
    text-align: center;
  }
  label {
    color: white;
    font-family: "Delius", cursive;
    font-size: 30px;
    text-align: center;
  }
  input[type="text"] {
    height: 50px;
    width: 300px;
    border: 3px solid mediumvioletred;
    border-radius: 15px;
    margin-inline: auto;
  }
  input[type="password"] {
    height: 50px;
    width: 300px;
    border: 3px solid mediumvioletred;
    border-radius: 15px;
    margin-inline: auto;
  }
  fieldset input[type="submit"] {
    display: flex;
    justify-content: center;
    color: white;
    background-color: hotpink;
    font-size: 20px;
    font-family: "Patrick Hand", cursive;
    height: 50px;
    width: 200px;
    border: 3px solid white;
    border-radius: 15px;
    /* margin: auto; */
  }
  article {
    font-family: "Patrick Hand", cursive;
    color: deeppink;
    text-align: center;
    font-size: 40px;
    border: 3px solid white;
    border-radius: 25px;
    margin: 50px;
    padding: 30px;
  }
  .emojis {
    display: flex;
    justify-content: center;
  }
  .username {
    margin-inline: auto;
    width: min(90%, 70.5rem);
  }
</style>

<div>
  <form action="/user/signup" method="post">
    <fieldset>
      <!-- CREATE BUTTON -->
      <legend>Create an account</legend>
      <!-- USERNAME -->
      <label class="username">
        Username: <input type="text" name="username" required />
      </label>
      <!-- PASSWORD  -->
      <label class="password">
        Password: <input type="password" name="password" required />
      </label>
      <!-- CREATE BUTTON  -->
      <!-- <input type="submit" value="Create Account" /> -->

      <input type="submit" class="btn" value="Create Account" onclick="pop()"></input>
      <div id="box">
      <i class="fas fa-user-lock"></i>
      <h3>DON'T FORGET YOUR PASSWORD</h3>
      <a class="close" onclick="pop()">Close</a>
    </div>

    </fieldset>

    <article>
      Your username has to be unique! Your password can be anything.
    </article>

    <span class="emojis">
      <span style="font-size: 100px">&#128521;</span>
      <span style="font-size: 100px">&#128150;</span>
      <span style="font-size: 100px">&#127802;</span>
    </span>
  </form>
</div>
{% endblock %}
